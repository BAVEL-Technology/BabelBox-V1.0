<nav class="h-24 w-full flex items-center justify-between px-12">
  <div class="left">
      {{> tiny-logo}}
  </div>
  <div class="">
    <p class="text-{{game.color}} lg:text-6xl md:text-5xl text-4xl font-semibold" style="font-family: {{game.font}};">{{game.title}}</p>
  </div>
  <div class="right">
    <span class="mx-4 fa-stack fa-1x text-pink-400 hover:text-blue-200">
      <i class="text-3xl fas fa-circle fa-stack-1x"></i>
      <i class="text-3xl far fa-question-circle fa-stack-1x text-blue-600 hover:text-pink-400"></i>
    </span>
  </div>
</nav>
<div class="flex flex-col w-full items-center justify-center h-screen">
  <div class="h-full w-full md:w-3/4 lg:w-1/3 rounded-xl p-4">
    {{> portal-card}}
    {{#if loggedIn}}
    {{#each portal.users}}
      {{> user-card}}
    {{/each}}
    {{else}}
    <div class="bg-{{game.color}} w-full flex flex-col text-gray-700 p-8 rounded-xl tracking-widest my-8 cursor-pointer" style="font-family: {{game.font}};">
      <div id="user-area" class="w-full flex justify-center mt-8" style="font-family: {{game.font}};">
        <div class="w-full mx-6 relative">
          <input id="user-name" type="text" name="user-name" placeholder=" " class="block appearance-none focus:outline-none border-b-4 border-gray-700 w-full bg-transparent text-xl text-gray-700 font-semibold">
          <label for="user-name" class="duration-300 absolute left-0 top-0 mt-8 w-full -top-10 -z-1 label text-4xl font-semibold">User name</label>
        </div>
      </div>
      <button id="join-portal-button" onclick="createUser({{portal.id}})" class="place-self-center my-4 bg-pink-400 h-12 text-white p-4 rounded-tl-xl rounded-br-xl rounded-tr rounded-bl flex items-center justify-center font-semibold w-2/3 text-4xl" style="font-family: {{game.font}};">Create User</button>
    </div>
    {{/if}}
  </div>
</div>

{{#section 'script'}}
  {{#each portal.users}}
    <script type="application/javascript">
        console.log("Hello World!");
    </script>
  {{/each}}
{{/section}}
