<div class="my-4 flex items-center justify-between bg-green-400 w-full text-gray-700 p-4 text-4xl text-center rounded-xl tracking-widest shadow-lg hover:shadow-xl transform hover:-translate-y-2" style="font-family: 'Sniglet', cursive;">
  <div class="emoji1"></div>
  <p>{{this.name}}</p>
  <div class="flex flex-col text-sm justify-between">
    <div {{#if currentUser === portalLeader.id}} onclick="makeLeader(event, {{this.id}})" {{/if}} class="w-8 h-8 rounded-full hover:bg-blue-300 flex items-center justify-center pl-1 cursor-pointer">
      <span class="fa-stack fa-1x">
        {{#if this.leader}}
          <span class="text-yellow-500"><i class="fas fa-star fa-stack-1x"></i></span>
        {{/if}}
        <span><i class="far fa-star fa-stack-1x"></i></span>
      </span>
    </div>
    {{#if currentUser === portalLeader.id}}
      <div onclick="deleteUser(event, {{this.id}})" class="w-8 h-8 rounded-full hover:bg-blue-300 flex items-center justify-center pl-1 cursor-pointer">
        <span class="fa-stack fa-1x">
          <span class="text-red-500"><i class="fas fa-trash fa-stack-1x"></i></span>
          <span><i class="fas fa-trash-alt fa-stack-1x"></i></span>
        </span>
      </div>
    {{/if}}
  </div>
</div>
