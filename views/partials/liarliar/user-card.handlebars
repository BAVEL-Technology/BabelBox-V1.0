<div id="user-{{id}}" class="card my-6 flex items-center justify-between bg-green-400 w-full text-gray-700 p-4 text-xl lg:text-4xl md:text-3xl text-center rounded-xl tracking-widest shadow-lg hover:shadow-xl transform hover:-translate-y-2" style="font-family: 'Sniglet', cursive;">
  <div {{#if (q id '==' @root.currentUser.id)}} onclick="showAvatars({{id}})" {{/if}} class="emoji cursor-pointer rounded-full hover:bg-blue-300 p-2">{{avatar}}</div>
  {{#if (q id '==' @root.currentUser.id)}}
    <input onkeyup="changeUserName({{id}})" type="text" id="user-name-change" value="{{name}}" class="appearance-none text-center bg-green-400 focus:outline-none">
  {{else}}
    <p class="user-name">{{name}}</p>
  {{/if}}
  <div class="flex flex-col text-sm justify-between">
    <div {{#if @root.currentUser.leader}} onclick="makeLeader({{id}}, {{@root.currentUser.id}})" {{/if}} class="make-leader w-8 h-8 rounded-full hover:bg-blue-300 flex items-center justify-center pl-1 cursor-pointer">
      <span class="fa-stack fa-1x user-leader">
          <span class="{{#unless leader}} hidden {{/unless}} text-yellow-500 gold-star"><i class="fas fa-star fa-stack-1x"></i></span>
        <span><i class="far fa-star fa-stack-1x"></i></span>
      </span>
    </div>
    <div onclick="deleteUser(event, {{id}})"
    class="{{#unless @root.currentUser.leader}} hidden {{/unless}} {{#if (q id '==' @root.currentUser.id)}} hidden {{/if}} w-8 h-8 rounded-full hover:bg-blue-300 user-trash flex items-center justify-center pl-1 cursor-pointer">
      <span class="fa-stack fa-1x">
        <span class="text-red-500"><i class="fas fa-trash fa-stack-1x"></i></span>
        <span><i class="fas fa-trash-alt fa-stack-1x"></i></span>
      </span>
    </div>
  </div>
  <div class="user-points text-sm p-2 text-green-200 bg-green-600 h-8 rounded absolute -top-4 -right-4">${{points}}</div>
</div>
