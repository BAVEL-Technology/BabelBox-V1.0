<div class="flex flex-col w-full items-center justify-center h-screen">
  {{> hero-title}}
  <div class="h-full w-1/3 rounded-xl p-4">
    {{#each games as |game|}}
      <a href="/{{game.url}}">
        <div class="my-4 flex items-center justify-between bg-green-400 w-full text-gray-700 p-4 text-4xl text-center rounded-xl tracking-widest shadow-lg hover:shadow-xl transform hover:-translate-y-2 cursor-pointer" style="font-family: 'Sniglet', cursive;">
          <div class="emoji1"></div>
          <p class="font-extrabold text-6xl" style="font-family: 'Sniglet', cursive;">{{game.title}}</p>
        </div>
      </a>
    {{/each}}
  </div>
</div>
