{{> nav tinyLogo=true centerText=true}}
<div class="flex flex-col w-full items-center justify-center min-h-screen">
  <div class="h-full w-11/12 md:w-3/4 lg:w-1/3 rounded-xl p-4" style="font-family: {{game.font}};">
    <div class="w-full flex justify-center pb-6">
      <div id="timer" style="font-family: {{game.font}};"></div>
    </div>
    {{> liarliar/user-card currentUser}}
    <div class="text-center w-full flex items-center justify-center py-8 lg:text-4xl md:text-3xl text-xl"
      style="font-family: {{game.font}};">
      {{blankify round.question.question}}
    </div>
    {{#each answers}}
    {{#if user.id}}
    {{#unless (q user.id '==' @root.currentUser.id)}}
    <button onclick="selectAnswer({{@root.currentUser.id}}, {{@root.round.id}}, {{user.id}})" class="answer place-self-center my-12 bg-blue-400 h-12 text-gray-100 p-4 rounded-xl flex
            items-center justify-center w-full lg:text-3xl md:text-2xl text-xl disabled:opacity-50">
      {{answer}}
    </button>
    {{/unless}}
    {{else}}
    <button onclick="selectAnswer({{@root.currentUser.id}}, {{@root.round.id}})" class="answer place-self-center my-12 bg-blue-400 h-12 text-gray-100 p-6 rounded-xl flex
            items-center justify-center w-full lg:text-3xl md:text-2xl text-xl disabled:opacity-50">
      {{answer}}
    </button>
    {{/if}}
    {{/each}}
  </div>
</div>

{{#section 'script'}}
<script src="/js/liarliar/liarliar-browserify.js"></script>
<script type="application/javascript">
  function next() {
    window.location.href = `/{{game.url}}/{{portal.code}}/waiting`
  }
  { {> liarliar / timer - script timeLimit = 20 strokeWidth = '10px' } }
</script>
{{/section}}