{{> nav tinyLogo=true centerText=true}}
<div class="flex flex-col w-full items-center justify-center h-screen">
  <div class="h-full w-11/12 md:w-3/4 lg:w-1/3 rounded-xl p-4">
    <div class="w-full flex items-center justify-between">
      <div class="">
        <p class="text-{{game.color}} font-semibold text-xl" style="font-family: {{game.font}};">
          PLAY
        </p>
        <div id="timer"></div>
      </div>
      <div class="flex flex-col items-center">
        <p class="text-{{game.color}} font-semibold text-xl" style="font-family: {{game.font}};">
          ROUND
        </p>
        <div class="h-12 w-12 rounded-full bg-red-400 flex items-center justify-center
        text-red-100 font-semibold" style="font-family: {{game.font}};">
          {{portal.round}}
        </div>
      </div>
    </div>
    {{> liarliar/user-card currentUser}}
    <div class=" text-center w-full flex items-center justify-center py-8 text-4xl"
    style="font-family: {{game.font}};">
      {{round.question.question}}
    </div>
    <input id="user-answer" type="text" name="portal-name"
    placeholder="{{pick3 round.question.suggestions}}"
    class="block appearance-none focus:outline-none border-b-4 border-gray-700
    bg-transparent text-3xl text-gray-700 w-full" style="font-family: {{game.font}};">
    <button id="submit-answer-button"
    onclick="submitAnswer({{currentUser.id}}, {{round.id}}, {{portal.id}})"
    class="place-self-center my-12 bg-blue-400 h-12 text-gray-100 p-4 rounded-tl-xl
    rounded-br-xl rounded-tr rounded-bl flex items-center justify-center w-full
    text-3xl disabled:opacity-50" style="font-family: {{game.font}};">
      Submit Answer
    </button>
  </div>
</div>

{{#section 'script'}}
  <script type="application/javascript">
    function next () {
      window.location.href = `/{{game.url}}/{{portal.code}}/answer`
    }
    {{> liarliar/timer-script timeLimit=20}}
  </script>
{{/section}}
